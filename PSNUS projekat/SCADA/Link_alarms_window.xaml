<Window x:Class="SCADA.Link_alarms_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCADA"
        mc:Ignorable="d"
        Title="Link_alarms_window" Height="367.729" Width="570.637">
    <Grid>

        <Label Name="AI_info" Content="Selected analog input: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,18,0,0" Height="43" Width="300"/>
        <Button Name="Link_alarm" Content="Link alarm" HorizontalAlignment="Left" Margin="324,21,0,0" VerticalAlignment="Top" Width="75" Click="Link_alarm_Click"/>
        <Button Name="Unlink_alarm" Content="Unlink alarm" HorizontalAlignment="Left" Margin="324,46,0,0" VerticalAlignment="Top" Width="75" Click="Unlink_alarm_Click"/>
        <Button Name="btn_Close" Content="Close" HorizontalAlignment="Left" Margin="433,38,0,0" VerticalAlignment="Top" Width="75" Click="Close_Click"/>
        <ListBox Name="Data_grid_all" HorizontalAlignment="Left" Height="196" Margin="19,82,0,0" VerticalAlignment="Top" Width="223">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="Data_grid_linked" HorizontalAlignment="Left" Height="196" Margin="282,82,0,0" VerticalAlignment="Top" Width="271">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
